# .env.example
# Rename this file to .env and add your secret API keys.
# This file should be added to .gitignore to keep your keys safe.

# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL="http://localhost:3000"
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=resume_tailor
DB_USER=postgres
DB_PASSWORD=your_password_here

# Google Gemini API Key
GEMINI_API_KEY="your-gemini-api-key-here"

# PDF.co API Key
PDF_CO_API_KEY="test-placeholder-key-for-testing"

# Stripe API Keys
STRIPE_SECRET_KEY="sk_test_placeholder-key-for-testing"
STRIPE_WEBHOOK_SECRET="whsec_placeholder-key-for-testing"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,chrome-extension://*"